import discord
from discord.ext import commands
import os

# Enable all intents
intents = discord.Intents.all()
bot = commands.Bot(command_prefix='!', intents=intents)

@bot.event
async def on_ready():
    print(f'‚úÖ {bot.user} is online!')
    print(f'‚úÖ ID: {bot.user.id}')
    print(f'‚úÖ Mention: {bot.user.mention}')
    print('‚úÖ Bot will reply "wsp?" when mentioned')

@bot.event
async def on_message(message):
    # Ignore messages from the bot itself
    if message.author == bot.user:
        return
    
    # Check if bot is mentioned in the message
    if bot.user.mentioned_in(message):
        # Reply with "wsp?"
        await message.reply('wsp?', mention_author=False)
        print(f'üì® Replied to {message.author} in #{message.channel.name}')
    
    # Process commands as well
    await bot.process_commands(message)

# Optional: Add a simple command to test
@bot.command(name='test')
async def test_command(ctx):
    await ctx.send('Bot is working! üçã')

# Optional: Add a ping command
@bot.command(name='ping')
async def ping_command(ctx):
    latency = round(bot.latency * 1000)
    await ctx.reply(f'Pong! üèì {latency}ms')

